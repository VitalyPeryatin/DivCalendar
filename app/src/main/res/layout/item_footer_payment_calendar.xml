<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16sp">

    <TextView
        android:id="@+id/footerPaymentMonthlyIncomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthly_income_label"/>

    <TextView
        android:id="@+id/footerPaymentMonthlyIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/footerPaymentMonthlyIncomeLabel"
        android:layout_alignTop="@id/footerPaymentMonthlyIncomeLabel"
        android:layout_marginStart="4dp"/>

</RelativeLayout>