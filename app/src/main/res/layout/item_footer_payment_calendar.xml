    <TextView
        android:id="@+id/footer_payment_monthly_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/footer_payment_monthly_income_label"
        android:layout_alignTop="@id/footer_payment_monthly_income_label"
        android:layout_marginStart="4dp"/>

</RelativeLayout>