<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/calendarAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/calendarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/calendarContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calendarAppBarLayout"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/calendarContainerChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/calendarChartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:textSize="@dimen/font_normal"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:text="@string/payout_chart"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/calendarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@id/calendarChartTitle"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/calendarAnnualIncomeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/calendarChart"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"
                        android:textSize="@dimen/font_small_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:text="@string/annual_income"/>

                    <TextView
                        android:id="@+id/calendarAnnualIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/calendarChart"
                        android:layout_alignTop="@id/calendarAnnualIncomeLabel"
                        android:layout_toEndOf="@id/calendarAnnualIncomeLabel"
                        android:layout_marginStart="4dp"
                        android:textSize="@dimen/font_small_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        tools:text="1252"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarPaymentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/calendarContainerChart"
                android:clipToPadding="false"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/loadingLayout"
        layout="@layout/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />

    <include
        android:id="@+id/emptyLayout"
        layout="@layout/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />

    <include
        android:id="@+id/noNetworkLayout"
        layout="@layout/layout_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />

</RelativeLayout>